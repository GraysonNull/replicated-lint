{
    "version": "2.2.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "dist/",
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "lib": ["dom", "es5", "scripthost", "es2015"]
    },
    "include": [
        "./src/**/*.ts"
    ]
}
